[push]
	default = current
[diff]
	tool = "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge"
[difftool]
	prompt = false
[difftool "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge"]
	cmd = "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge \"$LOCAL\" \"$REMOTE\""
[merge]
	tool = "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge"
[mergetool]
	trustExitCode = true
[mergetool "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge"]
	cmd = "/Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
